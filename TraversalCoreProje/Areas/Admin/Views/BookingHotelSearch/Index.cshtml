@model IEnumerable<TraversalCoreProje.Areas.Admin.Models.BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Booking Hotel Rezarvasyon Sayfası</h1>

<h3>Arama yapılan Şehir: Berlin/Almanya</h3>

<table class="table table-striped"> 
    <tr> 
        <th>#</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel değerlendirme</th>
        <th>Detaylar</th>
    </tr> 
    @foreach (var item in Model)
    {
        count++;   
        <tr> 
            <td>@count</td>
            <td>@item.name</td>
            <td>@item.reviewScore</td>
            <td>@item.reviewScoreWord</td>
        </tr>
    }
</table>