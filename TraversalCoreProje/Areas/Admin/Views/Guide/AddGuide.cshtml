@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddGuide</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("İsim")
        <input type="text" asp-for="Name" class="form-control" /> 
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Rehber Fotağrafı")
        <input type="text" asp-for="Image" class="form-control" /> 
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <br />
    <div class="form-group">
        @Html.Label("İnstagram")
        <input type="text" asp-for="InstagramUrl" class="form-control" /> 


    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twiter")
        <input type="text" asp-for="TwitterUrl" class="form-control" /> 
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Durum")
        <input type="text" asp-for="Status" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea> 
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <br />
    <button class="btn btn-outline-succsess">Rezervasyon Yap</button>
</form>
