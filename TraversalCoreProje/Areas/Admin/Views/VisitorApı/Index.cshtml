@model List<TraversalCoreProje.Areas.Admin.Models.VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Ziyaretci Listesi</h1>

<table class="table table-bordered"> 
    <tr> 
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr> 
    @foreach (var item in Model)
    {
        <tr> 
            <td>@item.VisitorId</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/VisitorApı/DeleteVisitor/@item.VisitorId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/VisitorApı/UpdateVisito/@item.VisitorId" class="btn btn-outline-danger">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/VisitorApı/AddVisitor/" class="btn btn-outline-primary">Yeni Ziyaretçi Girişi</a> 