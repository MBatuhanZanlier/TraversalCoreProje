@using EntityLayer.Concrete 
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_UserLayout.cshtml";
}

<h1>Aktif Tur Rotalarımız</h1> 
<table class="table table-bordered">
    <tr> 
        <th>#</th>
        <th>Şehir</th>
        <th>Süre</th>
        <th>Kapasite</th>
        <th>Fiyat</th>
    </tr> 
    @foreach (var item in Model)
    {
        <tr> 
            <td>@item.DestinationId</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Capacity</td>
            <td>@item.Price₺</td> 
            <td><a href="#"class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>

